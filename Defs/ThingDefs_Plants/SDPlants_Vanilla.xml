<?xml version="1.0" encoding="utf-8"?>

<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>SDPlant_Vanilla</defName>
    <label>Vanilla</label>
    <description>A pretty flower that takes a long time to grow.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>25</Beauty>
      <BeautyOutdoors>25</BeautyOutdoors>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/Vanilla/MatureVanilla</texPath>
      <drawSize>1,1</drawSize>
      <drawRotated>false</drawRotated>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <ingestible>
      <canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
    </ingestible>
    <plant>
      <immatureGraphicPath>Things/Plants/Vanilla/ImmatureVanilla</immatureGraphicPath>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <sowWork>600</sowWork> <!-- 120 ticks per live day for beauty -->
      <sowTags>
        <li>Ground</li>
        <li>Decorative</li>
      </sowTags>
      <growMinGlow>0.3</growMinGlow>
      <topWindExposure>0.0</topWindExposure>
      <growDays>1.5</growDays>
      <lifespanDaysPerGrowDays>7</lifespanDaysPerGrowDays>
      <visualSizeRange>1.0~1.0</visualSizeRange>
      <wildOrder>1</wildOrder>
      <purpose>Beauty</purpose>
    </plant>
  </ThingDef>


</Defs>

